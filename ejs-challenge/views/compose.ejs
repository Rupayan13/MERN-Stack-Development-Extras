<%- include("partials/header") -%> 
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input name="postTitle" type="text" class="form-control" id="exampleFormControlInput1">
          </div>
    </div>
    <div class="form-group">
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Post</label>
            <textarea name="postBody" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
    </div>
      <button type="submit" class="btn btn-primary">Publish</button>
</form>


